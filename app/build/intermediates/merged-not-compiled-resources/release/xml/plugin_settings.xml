<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/plugin_settings" >

        <CheckBoxPreference
            android:key="no_ads"
            android:title="@string/ad_block"
            android:summary="@string/ad_block_sum"
            android:icon="@drawable/ic_ad_block"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="instagram_downloads"
            android:title="@string/instagram_downloads_title"
            android:summary="@string/instagram_downloads_sum"
            android:icon="@drawable/ic_instagram"
            android:defaultValue="false" />


        <CheckBoxPreference
            android:key="facebook_photos"
            android:title="@string/facebook_photos_title"
            android:summary="@string/facebook_photos_sum"
            android:icon="@drawable/ic_facebook_photo"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="facebook_notifications"
            android:title="@string/facebook_notifications_title"
            android:summary="@string/facebook_notifications_sum"
            android:icon="@drawable/ic_facebook_about"
            android:defaultValue="false"
            android:enabled="false"
            android:selectable="false"/>


        <Preference
            android:title="divider"
            android:selectable="false"
            android:layout="@layout/layout_preference_card"/>

    </PreferenceCategory>
</PreferenceScreen>