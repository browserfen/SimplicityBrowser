<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f0f0f0">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:elevation="1dp"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="false"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="14sp"
                    android:textColor="@color/md_blue_600"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    android:text="Support Development By Donating!"
                    tools:ignore="HardcodedText" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/amount"
                    android:textSize="64sp"
                    android:textColor="@color/md_blue_600"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="$1.85"
                    tools:ignore="HardcodedText" />
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:max="5"
                    android:theme="@style/SeekBarWithoutSteps"/>
                <!--<org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="false"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_width="-1"
                    android:layout_height="-2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:dsb_min="1"
                    app:dsb_max="100"
                    app:dsb_progressColor="3b5998"
                    app:dsb_trackColor="3b5998"
                    app:dsb_indicatorPopupEnabled="false" />-->
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/description"
                    android:textColor="@color/md_blue_600"
                    android:gravity="center"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Buys me a coffee."
                    android:textAllCaps="true"
                    tools:ignore="HardcodedText" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="#212121"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/donate_description"
                    tools:ignore="HardcodedText" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/paypal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/md_blue_600">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_paypal"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:paddingStart="50dp"
                        android:paddingEnd="50dp"
                        android:drawablePadding="8dp"
                        android:text="Donate via PayPal"
                        tools:ignore="HardcodedText"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"/>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>